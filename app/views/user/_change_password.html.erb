<% if @user.has_identity? %>
  <%= form_for @user.identity, html: { class: 'form-horizontal' } do |f| %>
    <legend>Change password</legend>
    <%= render 'shared/form_errors', errors: @user.errors %>
    
    <div class="form-group">
      <%= f.label :password, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-10">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div> 

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div> 
    
    <%= render 'shared/form_submit_cancel', f: f, back_path: root_path %>
  <% end %>
<% end %>