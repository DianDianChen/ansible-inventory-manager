<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :hosts %>
  <%= f.collection_select :hosts, @group.inventory.hosts, :id, :alias, { selected: @group.host_ids, :include_blank => false }, { class: 'form-control', multiple: true } %> 
</div>

<div class="form-group">
  <%= f.label :variables %>
  <%= f.text_area :variables, class: 'form-control', id: 'var_area', rows: '10' %>
</div>